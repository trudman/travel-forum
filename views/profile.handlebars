<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<!-- Sets up form for user to create a new post -->
<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

  <form id="create">
  <div class="form-group">
    <label for="title">Location: </label>
    <input type="text" class="form-control" id="title" aria-describedby="location-title" placeholder="Enter Location">
  </div>
  <div class="form-group">
    <label for="post-text">Post: </label>
    <input type="text" class="form-control" id="post-text" placeholder="Tell us about your trip">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<!-- Card to display all posts the user has created -->
{{#if posts.length}}
<div class="card" style="width: 18rem;">
  <h3>Current Posts:</h3>
  {{#each posts as |post|}}
  <div class="card-body">
    <h5 class="card-title">{{post.title}}</h5>
    <h6 class="card-subtitle mb-2 text-muted">Posted by {{post.user.username}} on {{format_date post.date_created}}</h6>
    <p class="card-text">{{post.post_text}}</p>
  </div>
  {{/each}}
</div>
{{/if}}

<script src="/js/profile.js"></script>

